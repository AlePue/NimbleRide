# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'NimbleRide' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for NimbleRide
  pod 'SpeechKit'
  pod 'FBSDKCoreKit'
  pod 'FBSDKShareKit'
  pod 'FBSDKLoginKit'
  
  source 'https://github.com/CocoaPods/Specs.git'
  pod 'AWSCognito'
  pod 'AWSCognitoIdentityProvider'
  pod 'AWSDynamoDB'
  pod 'AWSEC2'
  pod 'AWSLambda'
  pod 'AWSMobileAnalytics'
  pod 'AWSS3'
  pod 'AWSSES'
  pod 'AWSSimpleDB'
  pod 'AWSSNS'

  target 'NimbleRideTests' do
    inherit! :search_paths
    
    # Pods for testing
    pod 'SpeechKit'
    pod 'FBSDKCoreKit'
    pod 'FBSDKShareKit'
    pod 'FBSDKLoginKit'
  end

  target 'NimbleRideUITests' do
    inherit! :search_paths

    # Pods for testing
    pod 'SpeechKit'
    pod 'FBSDKCoreKit'
    pod 'FBSDKShareKit'
    pod 'FBSDKLoginKit'
  end

end
